<h1>Search tasks</h1>
{{#if error}} <span>{{error}}</span>{{/if}}
<form class="form-inline"  method="POST" action="/tasks/search">
<div class="form-group">
  <input class="form-control" type="text" name="id" placeholder="search tasks by id">
</div>
<br/>
<input type="submit" class="btn btn-primary" value="search">
</form>

<h4>Previously saved tasks</h4>
<ul class="list-group">
{{#each tasks}}
<li class="list-group-item">
  <a href="/tasks/details/{{this}}">{{this}}</a>
</li>
{{/each}}
</ul>