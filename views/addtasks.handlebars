<h1>Add a task</h1>
{{#if error}} <span>{{error}}</span>{{/if}}
<form class="form-inline"  method="POST" action="/tasks/add">
<div class="form-group">
  <label for="id">Assign task id</label>
  <input class="form-control" type="text" name="id" placeholder="e.g. task002">
</div>
<div class="form-group">
  <label for="title">Assign a name for the task</label>
  <input class="form-control" type="text" name="title" placeholder="e.g. cook dinner">
</div>
<div class="form-group">
  <label for="description">Write a brief description</label>
  <input class="form-control" type="text" name="description" placeholder="e.g. so i dont forget">
</div>
<br/>
<input type="submit" class="btn btn-primary" value="Save">
</form>
